<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cwpila14.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- ask the user for permission -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- needed if targeting Android 5.0(API lvl 21) or higher -->
    <uses-feature android:name="android.hardware.location.gps" />
    <uses-feature android:name="android.hardware.location.network" />

    <!-- Location services stuff -->
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="9877000" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartScreenStuff.SplashScreen"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BioStuff.BioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BioStuff.StarterPokemonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameStuff.MainGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TutorialStuff.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GameStuff.PokedexActivity" />
        <activity android:name=".GameStuff.BagActivity" />
        <activity android:name=".StartScreenStuff.MainActivity" />
        <activity android:name=".Battle.WildBattleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GameStuff.BrunoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameStuff.LanceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameStuff.LoreleiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameStuff.AgathaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameStuff.WinnerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".EliteFour.BattleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".GameStuff.LoserActvity"></activity>
    </application>

</manifest>