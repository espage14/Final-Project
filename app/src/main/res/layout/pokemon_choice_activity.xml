<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/starbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choosePokemon"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:paddingBottom="30dp"
        />

    <fragment
        android:id="@+id/StarterPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/starter_pokemon_fragment"
        android:layout_gravity="center"
        class="com.example.cwpila14.finalproject.BioStuff.StarterPokemonFragment"
        >

    </fragment>

</LinearLayout>